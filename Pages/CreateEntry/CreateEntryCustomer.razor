@page "/createEntry/Customer"
<h3>CreateEntryCustomer</h3>

<div class="card mb-0">
    <div class="card-header">
        Customer
    </div>
    <div class="card-body">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label>Phone</label>
                <input type="text" class="form-control" id="Phone" placeholder="(xxx) xxx-xxxx">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label>First Name</label>
                <input type="text" class="form-control" id="FirstName" placeholder="first">
            </div>

            <div class="form-group col-md-6">
                <label>Last Name</label>
                <input type="text" class="form-control" id="LastName" placeholder="last">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label>Address</label>
                <input type="text" class="form-control" id="Address" placeholder="123 Place Street">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label>Zip Code</label>
                <input type="number" class="form-control" id="ZipCode" placeholder="12345">
            </div>

            <div class="form-group col-md-6">
                <label>Cityid</label>
                <input type="number" class="form-control" id="Cityid" placeholder="4">
            </div>

        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label>Balance Due</label>
                <input type="number" class="form-control" id="Balancedue" placeholder="10">
            </div>
        </div>

        <button class="btn btn-outline-success w-100">Save Customer</button>
    </div>


</div>

