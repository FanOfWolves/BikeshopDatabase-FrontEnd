<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">Bikeshop</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" @onclick="()=>expandSubNav = !expandSubNav">
                <span class="oi oi-basket" aria-hidden="true"></span> Shop
            </NavLink>
            @if (expandSubNav)
            {
                <NavLink class="nav-link ml-3" href="bicycles">
                    <span class="oi oi-tag" aria-hidden="true"></span>Bicycles
                </NavLink>
                <NavLink class="nav-link ml-3" href="parts">
                    <span class="oi oi-wrench" aria-hidden="true"></span>Parts
                </NavLink>
            }
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="customers">
                <span class="oi oi-plus" aria-hidden="true"></span> Customer
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" @onclick="()=>expandSubNavCreateEntry = !expandSubNavCreateEntry">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Create Entry
            </NavLink>
            @if (expandSubNavCreateEntry)
            {
                <NavLink class="nav-link ml-3" href="createEntry/Bicycle">
                    <span class="oi oi-tag" aria-hidden="true"></span>Bicycles
                </NavLink>
                <NavLink class="nav-link ml-3" href="parts">
                    <span class="oi oi-wrench" aria-hidden="true"></span>Parts
                </NavLink>
            }
        </li>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;
    private bool expandSubNav;
    private bool expandSubNavCreateEntry;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
